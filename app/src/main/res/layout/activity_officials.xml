<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    tools:context=".OfficialActivity"

    <ScrollView
        android:layout_width="368dp"
        android:layout_height="669dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/youtube"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="68dp"
                android:layout_marginTop="8dp"
                android:background="@android:color/transparent"
                android:onClick="youtubeClick"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/officials_website"
                app:srcCompat="@drawable/youtube" />

            <ImageButton
                android:id="@+id/officials_photo"
                android:layout_width="187dp"
                android:layout_height="218dp"
                android:layout_marginTop="8dp"
                android:background="@android:color/transparent"
                android:onClick="photoClick"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.497"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/officials_party"
                app:srcCompat="@drawable/placeholder" />

            <ImageButton
                android:id="@+id/facebook"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="40dp"
                android:layout_marginTop="8dp"
                android:background="@android:color/transparent"
                android:onClick="facebookClick"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toStartOf="@+id/twitter"
                app:layout_constraintHorizontal_bias="0.819"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/officials_website"
                app:srcCompat="@drawable/facebook" />

            <ImageButton
                android:id="@+id/twitter"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="44dp"
                android:layout_marginTop="8dp"
                android:background="@android:color/transparent"
                android:onClick="twitterClick"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toStartOf="@+id/youtube"
                app:layout_constraintTop_toBottomOf="@+id/officials_website"
                app:srcCompat="@drawable/twitter" />

            <ImageButton
                android:id="@+id/DemRepIm"
                android:layout_width="64dp"
                android:layout_height="59dp"
                android:layout_marginTop="156dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.473"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/officials_photo"
                app:srcCompat="@drawable/rep_logo" />

            <TextView
                android:id="@+id/officials_location"
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:background="@android:color/background_dark"
                android:text="TextView"
                android:textAlignment="center"
                android:textColor="@android:color/background_light"
                android:textSize="18sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/officials_office"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:text="TextView"
                android:textAlignment="center"
                android:textColor="@android:color/background_light"
                android:textSize="20sp"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/officials_location" />

            <TextView
                android:id="@+id/officials_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="TextView"
                android:textAlignment="center"
                android:textColor="@android:color/background_light"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/officials_office"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/officials_party"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:textAlignment="center"
                android:textColor="@android:color/background_light"
                android:textSize="20sp"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/officials_name" />

            <TextView
                android:id="@+id/textViewaddress"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:text="Address:"
                android:textColor="@android:color/background_light"
                android:textSize="20sp"
                app:layout_constraintBaseline_toBaselineOf="@+id/officials_address"
                app:layout_constraintLeft_toLeftOf="parent" />

            <TextView
                android:id="@+id/officials_address"
                android:layout_width="262dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:autoLink="map"
                android:text="No data provided"
                android:textColor="@android:color/background_light"
                android:textColorLink="@android:color/holo_blue_bright"
                android:textSize="20sp"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintLeft_toRightOf="@+id/textViewaddress"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/officials_phone" />

            <TextView
                android:id="@+id/officials_phone"
                android:layout_width="262dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:autoLink="phone"
                android:text="No data provided"
                android:textColor="@android:color/background_light"
                android:textColorLink="@android:color/holo_blue_bright"
                android:textSize="20sp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/officials_photo" />

            <TextView
                android:id="@+id/textViewphone"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:text="Phone:"
                android:textColor="@android:color/background_light"
                android:textSize="20sp"
                app:layout_constraintBaseline_toBaselineOf="@+id/officials_phone"
                app:layout_constraintLeft_toLeftOf="parent" />

            <TextView
                android:id="@+id/officials_email"
                android:layout_width="262dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:autoLink="email"
                android:text="No data provided"
                android:textColor="@android:color/background_light"
                android:textColorLink="@android:color/holo_blue_bright"
                android:textSize="20sp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/officials_address" />

            <TextView
                android:id="@+id/textViewemail"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:layout_marginStart="16dp"
                android:text="Email:"
                android:textColor="@android:color/background_light"
                android:textSize="20sp"
                app:layout_constraintBaseline_toBaselineOf="@+id/officials_email"
                app:layout_constraintRight_toLeftOf="@+id/officials_email"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/officials_website"
                android:layout_width="262dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:autoLink="web"
                android:text="No data provided"
                android:textColor="@android:color/background_light"
                android:textColorLink="@android:color/holo_blue_bright"
                android:textSize="20sp"
                app:layout_constraintStart_toEndOf="@+id/textViewwebsite"
                app:layout_constraintTop_toBottomOf="@+id/officials_email" />

            <TextView
                android:id="@+id/textViewwebsite"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Website:"
                android:textColor="@android:color/background_light"
                android:textSize="20sp"
                app:layout_constraintBaseline_toBaselineOf="@+id/officials_website"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>